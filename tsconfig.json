{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "types",
    "types": ["jasmine"],
    "typeRoots": [
      "types"
    ],
    "paths": {
      "*": ["types/*"],
      "@common/*": [
        "../common/types/*"
      ]
    }
  },
  "exclude": ["public/**/*"],
  "compileOnSave": true
}
