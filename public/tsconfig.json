{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@pages/*": [
        "app/pages/*"
      ],
      "@services/*": [
        "app/shared/services/*"
      ],
      "@utils/*": [
        "app/shared/utils/*"
      ],
      "@test/*": [
        "../test/*"
      ],
      "@models/*": [
        "app/shared/models/*"
      ],
      "@common/*": [
        "../../common/types/*"
      ]
    }
  }
}